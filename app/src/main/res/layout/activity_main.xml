<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffea"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/imageButton7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="304dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/fajardo" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_marginRight="304dp"
        android:visibility="visible"
        app:srcCompat="@mipmap/descargafede" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="69dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:backgroundTint="#0B0A0A"
        app:srcCompat="@mipmap/bandera"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="-23dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-251dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:layout_toEndOf="@id/imageView"
        android:fadeScrollbars="false"
        android:fontFamily="monospace"
        android:text="VOTACIONES ELECTORALES 2023"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="81dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:text="Ingrese la cantidad de electores:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="241dp"
        android:fontFamily="monospace"
        android:text="Ingrese su edad:"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-36dp"
        android:layout_marginRight="14dp"

        android:ems="3"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCantidad"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="167dp"
        android:ems="3"
        android:inputType="text"
        android:onClick="ValidarEdad"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="93dp"
        android:fontFamily="monospace"
        android:text="SELECCIONE UN CANDIDATO"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginRight="126dp"
        android:fontFamily="monospace"
        android:onClick="Candidato1"
        android:text="Candidato 1"
        android:textColor="#ffffea" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Btn1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="125dp"
        android:fontFamily="monospace"
        android:onClick="Candidato2"
        android:text="Candidato 2"
        android:textColor="#ffffea" />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Btn2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="125dp"
        android:fontFamily="monospace"
        android:onClick="Candidato3"
        android:text="Candidato 3"
        android:textColor="#ffffea" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/imageButton6"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="305dp"
        android:onClick="Candidato1"
        android:visibility="visible"
        app:srcCompat="@mipmap/descarga" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-99dp"
        android:layout_marginRight="51dp"
        android:textColor="#000000"
        android:text="0" />

    <TextView
        android:id="@+id/Tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton8"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-98dp"
        android:layout_marginRight="50dp"
        android:textColor="#000000"
        android:text="0" />

    <TextView
        android:id="@+id/Tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton7"
        android:layout_alignParentRight="true"
        android:layout_marginTop="47dp"
        android:layout_marginRight="49dp"
        android:textColor="#000000"
        android:text="0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Btn3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="76dp"
        android:layout_marginRight="146dp"
        android:backgroundTint="#48a259"
        android:fontFamily="monospace"
        android:onClick="Votos"
        android:text="Votar"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="109dp"
        android:fontFamily="monospace"
        android:text="Candidato ganador"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>